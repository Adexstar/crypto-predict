// Prisma Schema for Trading Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hashed
  name      String?
  role      String   @default("USER")  // "USER" or "ADMIN"
  
  // Trading balances
  balance         Float    @default(0)
  spotBalance     Float    @default(0)
  futuresBalance  Float    @default(0)
  optionsBalance  Float    @default(0)
  
  // AI Bot testing balance (startup funds)
  testingBalance  Float    @default(2000)
  
  // AI Bot subscription tracking
  lastAISubDate   DateTime?  // Track last subscription date for daily limits
  aiSubCount      Int      @default(0)  // Count of subs today for testing balance
  
  // Account status
  frozen          Boolean  @default(false)
  kyc             Boolean  @default(false)
  kycLocked       Boolean  @default(false)
  vip             Boolean  @default(false)
  
  // Email verification
  emailVerified   Boolean  @default(false)
  verificationCode String?
  verificationCodeExpires DateTime?
  pendingRegistration Boolean @default(false)
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastLoginAt     DateTime?
  
  // Relations
  history         History[]
  deposits        Deposit[]
  withdrawals     Withdrawal[]
  transfers       Transfer[]
  supportTickets  SupportTicket[]
  portfolio       Portfolio?
  orders          Order[]       @relation("OrdersAsUser")
  trades          Trade[]       @relation("TradesAsUser")
  
  @@index([email])
  @@index([role])
}

model History {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  action    String
  message   String?
  meta      Json?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model Deposit {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  amount          Float
  method          String @default("CRYPTO")  // "CRYPTO", "BANK"
  network         String?  // "ETH", "BTC", "USDT", etc.
  asset           String?  // Asset code
  walletAddress   String?  // Deposit wallet address
  details         Json?    // Additional details as JSON
  
  status          String @default("PENDING")  // "PENDING", "CONFIRMED", "REJECTED"
  confirmedAt     DateTime?
  rejectedAt      DateTime?
  rejectionReason String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Withdrawal {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  amount          Float
  method          String @default("CRYPTO")  // "CRYPTO", "BANK"
  network         String?  // "ETH", "BTC", "USDT", etc.
  walletAddress   String?  // Withdrawal wallet address
  details         Json?    // Additional details as JSON
  
  status          String @default("PENDING")  // "PENDING", "APPROVED", "REJECTED", "COMPLETED"
  approvedAt      DateTime?
  completedAt     DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Transfer {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fromAccount     String   // "spot", "futures", "options"
  toAccount       String   // "spot", "futures", "options"
  amount          Float
  
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model SupportTicket {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  subject   String
  message   String
  category  String?
  status    String @default("OPEN")  // "OPEN", "IN_PROGRESS", "RESOLVED", "CLOSED"
  priority  String @default("MEDIUM")  // "LOW", "MEDIUM", "HIGH", "URGENT"
  
  assignedTo String?
  replies   String?  // JSON as string
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  closedAt  DateTime?
  
  @@index([userId])
  @@index([status])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      String @default("INFO")  // "INFO", "WARNING", "MAINTENANCE", "PROMOTION"
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([type])
  @@index([createdAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  targetId    String?
  performedBy String   // Admin user ID or email
  details     String?  // JSON as string
  
  createdAt   DateTime @default(now())
  
  @@index([performedBy])
  @@index([createdAt])
}

// ===== SPOT TRADING MODELS =====

model Portfolio {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Holdings by asset
  assets    Json     @default("{}")  // { "USDT": 10000, "BTC": 0.5, "ETH": 2.0, ... }
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model CryptoMarket {
  id              String   @id @default(cuid())
  symbol          String   @unique  // "BTC/USDT", "ETH/USDT", etc.
  baseAsset       String   // "BTC", "ETH"
  quoteAsset      String   // "USDT"
  
  lastPrice       Float    @default(0)
  high24h         Float    @default(0)
  low24h          Float    @default(0)
  volume24h       Float    @default(0)
  changePercent24h Float   @default(0)
  
  lastUpdated     DateTime @default(now())
  
  @@index([symbol])
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation("OrdersAsUser", fields: [userId], references: [id], onDelete: Cascade)
  
  symbol          String   // "BTC/USDT"
  side            String   // "BUY" or "SELL"
  orderType       String   // "LIMIT" or "MARKET"
  
  // Order details
  price           Float    // The price at which user wants to buy/sell
  quantity        Float    // Amount of crypto
  filledQuantity  Float    @default(0)
  
  // Status
  status          String   @default("OPEN")  // "OPEN", "PARTIALLY_FILLED", "FILLED", "CANCELLED"
  
  // Cost / proceeds tracking
  totalCost       Float    // For BUY: price * quantity; For SELL: price * quantity
  
  // Relations
  trades          Trade[]   @relation("TradesFromOrder")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  filledAt        DateTime?
  
  @@index([userId])
  @@index([symbol])
  @@index([status])
  @@index([createdAt])
}

model Trade {
  id              String   @id @default(cuid())
  orderId         String
  order           Order    @relation("TradesFromOrder", fields: [orderId], references: [id], onDelete: Cascade)
  
  userId          String
  user            User     @relation("TradesAsUser", fields: [userId], references: [id], onDelete: Cascade)
  
  symbol          String   // "BTC/USDT"
  side            String   // "BUY" or "SELL"
  executionPrice  Float
  quantity        Float
  
  totalValue      Float    // executionPrice * quantity
  
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@index([orderId])
  @@index([symbol])
  @@index([createdAt])
}
