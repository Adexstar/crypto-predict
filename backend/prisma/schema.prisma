// Prisma Schema for Trading Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hashed
  name      String?
  role      String   @default("USER")  // "USER" or "ADMIN"
  
  // Trading balances
  balance         Float    @default(0)
  spotBalance     Float    @default(0)
  futuresBalance  Float    @default(0)
  optionsBalance  Float    @default(0)
  
  // Account status
  frozen          Boolean  @default(false)
  kyc             Boolean  @default(false)
  kycLocked       Boolean  @default(false)
  vip             Boolean  @default(false)
  
  // Email verification
  emailVerified   Boolean  @default(false)
  verificationCode String?
  verificationCodeExpires DateTime?
  pendingRegistration Boolean @default(false)
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastLoginAt     DateTime?
  
  // Relations
  history         History[]
  deposits        Deposit[]
  withdrawals     Withdrawal[]
  transfers       Transfer[]
  supportTickets  SupportTicket[]
  
  @@index([email])
  @@index([role])
}

model History {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  action    String
  message   String?
  meta      Json?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model Deposit {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  amount          Float
  status          String @default("PENDING")  // "PENDING", "CONFIRMED", "REJECTED"
  method          String @default("CRYPTO")   // e.g., "CRYPTO", "BANK"
  network         String?
  asset           String?
  walletAddress   String?
  confirmedAt     DateTime?
  rejectedAt      DateTime?
  rejectionReason String?
  
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Withdrawal {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  amount          Float
  status          String @default("PENDING")  // "PENDING", "APPROVED", "REJECTED", "COMPLETED"
  network         String?
  walletAddress   String?
  approvedAt      DateTime?
  completedAt     DateTime?
  
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Transfer {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fromAccount     String   // "spot", "futures", "options"
  toAccount       String   // "spot", "futures", "options"
  amount          Float
  
  createdAt       DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
}

model SupportTicket {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  subject   String
  message   String
  category  String?
  status    String @default("OPEN")  // "OPEN", "IN_PROGRESS", "RESOLVED", "CLOSED"
  priority  String @default("MEDIUM")  // "LOW", "MEDIUM", "HIGH", "URGENT"
  
  assignedTo String?
  replies   String?  // JSON as string
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  closedAt  DateTime?
  
  @@index([userId])
  @@index([status])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      String @default("INFO")  // "INFO", "WARNING", "MAINTENANCE", "PROMOTION"
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([type])
  @@index([createdAt])
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  targetId    String?
  performedBy String   // Admin user ID or email
  details     String?  // JSON as string
  
  createdAt   DateTime @default(now())
  
  @@index([performedBy])
  @@index([createdAt])
}
